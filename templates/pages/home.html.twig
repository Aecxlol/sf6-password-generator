{% extends 'base.html.twig' %}

{% block body %}
    <h1>Password generator</h1>

    {% set password_length = app.request.cookies.getInt('app_length', password_default_length) %}

    <form action="{{ path('app_generate_password') }}" method="get">
        <div>
            <label for="length">Length</label>
            <select name="length" id="length">
                {% for i in password_min_length..password_max_length %}
                    <option value="{{ i }}" {{ i == password_length ? 'selected' }}>
                        {{ i }}
                    </option>
                {% endfor %}
            </select>
        </div>

        <div>
            <label for="uppercase-letters">Uppercase letters</label>
            <input type="checkbox" id="uppercase-letters" name="uppercase-letters" {{ app.request.cookies.getBoolean('app_uppercase_letters') ? 'checked' }}>
        </div>

        <div>
            <label for="digits">Numbers</label>
            <input type="checkbox" id="digits" name="digits" {{ app.request.cookies.getBoolean('app_digits') ? 'checked'  }}>
        </div>

        <div>
            <label for="special-characters">Special characters</label>
            <input type="checkbox" id="special-characters" name="special-characters" {{ app.request.cookies.getBoolean('app_special_characters') ? 'checked' }}>
        </div>

        <div>
            <button type="submit">Generate password</button>
        </div>
    </form>


    <footer>
        <p>Built by Damien</p>
    </footer>
{% endblock %}

