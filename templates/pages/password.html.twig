{% extends 'base.html.twig' %}

{% block title 'Generated password' %}

{% block body %}
    <div class="card text-center shadow">
        <div class="card-header">
            <h1 class="h4 mb-0 text-muted">Password generated</h1>
        </div>


        <div class="card-body">
            <div class="alert alert-success">
                <strong>{{ password }}</strong>
            </div>

            <p class="mt-3">
                <a href="{{ path('app_home') }}" class="text-decoration-none">Go back to homepage</a>
            </p>
        </div>
    </div>
{% endblock %}